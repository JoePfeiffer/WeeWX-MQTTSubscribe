{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
    {
        "name": "Run current test",
        "type": "python",
        "request": "launch",
        "program": "${file}",
        "console": "integratedTerminal"
    },
        {
            "name": "Service: Loop",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/bin/user/MQTTSubscribe.py",
            "args": [
                "--type", "service",
                "--binding", "loop",
                "--interval", "2",
                "--delay", "0",
                "--records", "1",
                "--verbose",
                "${workspaceFolder}/weewx.loop.conf",
            ],            
            "console": "integratedTerminal"
        },
        {
            "name": "Service: Archive",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/bin/user/MQTTSubscribe.py",
            "args": [
                "--type", "service",
                "--binding", "archive",
                "--interval", "60",
                "--delay", "5",
                "--records", "1",
                "--verbose",
                "${workspaceFolder}/weewx.archive.conf",
            ],            
            "console": "integratedTerminal"
        },
        {
            "name": "Driver: Loop",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/bin/user/MQTTSubscribe.py",
            "args": [
                "--type", "driver",
                "--binding", "loop",
                "--interval", "2",
                "--delay", "0",
                "--records", "1",
                "--verbose",
                "${workspaceFolder}/weewx.loop.conf",
            ],            
            "console": "integratedTerminal"
        },
        {
            "name": "Driver: Archive",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/bin/user/MQTTSubscribe.py",
            "args": [
                "--type", "driver",
                "--binding", "archive",
                "--interval", "60",
                "--delay", "5",
                "--records", "1",
                "--verbose",
                "${workspaceFolder}/weewx.archive.conf",
            ],            
            "console": "integratedTerminal"
        },
        {
            "name": "Install: Service",
            "type": "python",
            "request": "launch",
            "env": {
                "MQTTSubscribe_install_type": "service"
            },
            "program": "${workspaceFolder}/../weewx/bin/wee_extension",
            "args": [
                "--verbosity", "3",
                "--dry-run",
                "--install", "."
            ],            
            "console": "integratedTerminal"
        },
        {
            "name": "Install: Driver",
            "type": "python",
            "request": "launch",
            "env": {
                "MQTTSubscribe_install_type": "driver"
            },
            "program": "${workspaceFolder}/../weewx/bin/wee_extension",
            "args": [
                "--verbosity", "3",
                "--dry-run",
                "--install", "."
            ],            
            "console": "integratedTerminal"
        },
        {
            // Requires MQTTSubscribe.py to be in 'weewx/bin/user' directory
            // Because python prepends the scripts directory, 'weewx/bin' to sys.path
            // So when weewx does an __import__('user') it uses 'weewx/bin/user'
            "name": "MQTTSubscribeDriverConfEditor: Driver",
            "type": "python",
            "request": "launch",
            "env": {
                "MQTTSubscribe_install_type": "driver"
            },
            "program": "${workspaceFolder}/../weewx/bin/wee_config",
            "args": [
                "--output", "/tmp/output.conf,",
                "--no-backup",
                "--reconfigure"
            ],            
            "console": "externalTerminal"
        },
        {
            // Requires MQTTSubscribe.py to be in 'weewx/bin/user' directory
            // Because python prepends the scripts directory, 'weewx/bin' to sys.path
            // So when weewx does an __import__('user') it uses 'weewx/bin/user'
            "name": "MQTTSubscribeDriverConfEditor: Service",
            "type": "python",
            "request": "launch",
            "env": {
                "MQTTSubscribe_install_type": "service"
            },
            "program": "${workspaceFolder}/../weewx/bin/wee_config",
            "args": [
                "--output", "/tmp/output.conf,",
                "--no-backup",
                "--reconfigure"
            ],            
            "console": "externalTerminal"
        },       
        {
            // Requires MQTTSubscribe.py to be in 'weewx/bin/user' directory
            // Because python prepends the scripts directory, 'weewx/bin' to sys.path
            // So when weewx does an __import__('user') it uses 'weewx/bin/user'
            "name": "weewxd: Service",
            "type": "python",
            "request": "launch",
            "env": {
                "LANG": "en_GB.UTF-8"
            },
            "program": "${workspaceFolder}/../weewx/bin/weewxd",
            "args": [
                "weewx.service.conf"
            ],            
            "console": "externalTerminal"
        },   
        {
            // Requires MQTTSubscribe.py to be in 'weewx/bin/user' directory
            // Because python prepends the scripts directory, 'weewx/bin' to sys.path
            // So when weewx does an __import__('user') it uses 'weewx/bin/user'
            "name": "weewxd: Device",
            "type": "python",
            "request": "launch",
            "env": {
                "LANG": "en_GB.UTF-8"
            },
            "program": "${workspaceFolder}/../weewx/bin/weewxd",
            "args": [
                "weewx.device.conf"
            ],            
            // Work around for timeout
            //"console": "externalTerminal"
            "console": "integratedTerminal"
        },
        {
            "name": "pubmqtt",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/pubmqtt.py",
            "args": [
                "--host", "localhost",
                "--port", "1883",
            ],            
            "console": "integratedTerminal"
        },               
    ]
}